<Application
    x:Class="VidaDeProgramador.W8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidaDeProgramador.W8"
    xmlns:localData="using:VidaDeProgramador.W8.Data" xmlns:viewModels="using:VidaDeProgramador.W8.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <viewModels:ViewModelLocator x:Key="Locator"/>
            <x:String x:Key="AppName">VidaDeProgramador.W8</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
